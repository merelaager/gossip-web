// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  username      String      @unique
  password      String
  name          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  posts         Post[]      @relation("Posts")
  approvedPosts Post[]      @relation("ApprovedPosts")
  role          Role        @default(USER)
  shift         Int
  code          InviteCode? @relation(fields: [codeId], references: [id])
  codeId        String?     @unique
  likes         PostLike[]  @relation("UserLikes")
}

model Post {
  id         String     @id @default(uuid())
  title      String
  content    String?    @db.Text
  imageId    String?
  published  Boolean    @default(false)
  hidden     Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  author     User       @relation("Posts", fields: [authorId], references: [id])
  authorId   String
  approvedBy User?      @relation("ApprovedPosts", fields: [approverId], references: [id])
  approverId String?
  shift      Int
  likes      PostLike[] @relation("PostLikes")
}

model PostLike {
  post      Post     @relation("PostLikes", fields: [postId], references: [id])
  postId    String
  user      User     @relation("UserLikes", fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([postId, userId])
}

model InviteCode {
  id        String   @id
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shift     Int      @default(4)
  usedBy    User?
}

enum Role {
  USER
  ADMIN
}
